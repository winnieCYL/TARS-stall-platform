<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.daniel.dao.GoodImageDAO">
    <select id="getByGoodId" parameterType="_int" resultType="GoodImage">
        select * from goodimage where gid= #{gid}
    </select>

    <insert id="add" useGeneratedKeys="true" keyProperty="id" parameterType="GoodImage" >
        insert into goodimage ( gid ) values (#{good.id})
    </insert>

    <update id="update" parameterType="GoodImage" >
        update goodimage set gid=#{good.id} where id=#{id}
    </update>

    <delete id="deleteByGoodId" parameterType="_int" >
        delete from goodimage where gid= #{gid}
    </delete>

    <!-- ========下面的在DAO层没有声明========= -->

    <delete id="delete" parameterType="GoodImage" >
        delete from goodimage where id= #{id}
    </delete>

    <select id="get" parameterType="_int" resultType="GoodImage">
        select * from goodimage where id= #{id}
    </select>

    <select id="list" resultType="GoodImage">
        select * from goodimage
    </select>

    <select id="count" resultType="_int">
        select count(id) from goodimage
    </select>

    <!--<select id="getByBookId" resultType="BookImage">
        select * from bookImage where bid = #{bid} limit #{start},#{count}
    </select>-->
</mapper>