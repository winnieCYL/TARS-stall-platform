<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.daniel.dao.ShopImageDAO">
    <select id="getByShopId" parameterType="_int" resultType="ShopImage">
        select * from shopimage where sid= #{sid}
    </select>

    <insert id="add" useGeneratedKeys="true" keyProperty="id" parameterType="ShopImage" >
        insert into shopimage ( sid ) values (#{shop.id})
    </insert>

    <update id="update" parameterType="ShopImage" >
        update shopimage set sid=#{shop.id} where id=#{id}
    </update>

    <delete id="deleteByShopId" parameterType="_int" >
        delete from shopimage where sid= #{sid}
    </delete>

    <!-- ========下面的在DAO层没有声明========= -->

    <delete id="delete" parameterType="ShopImage" >
        delete from shopimage where id= #{id}
    </delete>

    <select id="get" parameterType="_int" resultType="ShopImage">
        select * from shopimage where id= #{id}
    </select>

    <select id="list" resultType="ShopImage">
        select * from shopimage
    </select>

    <select id="count" resultType="_int">
        select count(id) from shopimage
    </select>

    <!--<select id="getByBookId" resultType="BookImage">
        select * from bookImage where bid = #{bid} limit #{start},#{count}
    </select>-->
</mapper>