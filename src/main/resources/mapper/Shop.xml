<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.daniel.dao.ShopDAO">
    <resultMap id="shopResultMap" type="Shop">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="lon" property="lon" />
        <result column="lat" property="lat" />
        <result column="opentime" property="openTime" />
        <association property="user" javaType="MerchantUser">
            <id column="uid" property="id" />
        </association>
    </resultMap>

    <select id="getMerchantUserId" resultType="_int">
        select uid from shop where id = #{id}
    </select>

    <select id="get" parameterType="_int" resultMap="shopResultMap">
        select * from  shop  where id= #{id}
    </select>
    
    <insert id="add" useGeneratedKeys="true" keyProperty="id" parameterType="Shop" >
        insert into shop
        ( name,lon,lat,opentime,uid )
        values
        (#{name},#{lon},#{lat},#{openTime},#{user.id})
    </insert>

    <update id="update" parameterType="Shop" >
        update shop set name=#{name},lon=#{lon},lat=#{lat},opentime=#{openTime},uid=#{user.id} where id=#{id}
    </update>

    <select id="count" resultType="_int">
        select count(id) from shop
    </select>

    <delete id="delete" parameterType="_int" >
        delete from shop where id= #{id}
    </delete>


    <select id="list" resultType="Shop">
        select * from  shop
    </select>

    <select id="getByUserId" resultType="Shop">
        select * from shop where uid = #{uid}
    </select>

    <select id="getListByUserId" resultType="Shop">
        select * from shop where uid = #{uid}
    </select>

</mapper>